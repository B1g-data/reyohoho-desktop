{
  "name": "ReYohoho",
  "version": "1.0.6",
  "main": "dist/main.js",
  "author": "ReYohoho",
  "type": "module",
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.12.0",
    "cross-env": "^7.0.3",
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8",
    "electron-prompt": "^1.7.0",
    "electron-store": "^10.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.5.0",
    "@types/electron-prompt": "^1.6.5",
    "cross-fetch": "^4.1.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "build:win": "rm -rf ./dist && npm run build && electron-builder --win --publish=never",
    "build:mac": "rm -rf ./dist && npm run build && electron-builder --mac --x64 --arm64 --publish=never",
    "build:linux": "rm -rf ./dist && npm run build && electron-builder --linux --publish=never"
  },
  "build": {
    "productName": "ReYohoho",
    "appId": "ru.reyohoho",
    "files": [
      "dist/main.js",
      "package.json",
      "loader.html"
    ],
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "icons/256x256.png"
    },
    "mac": {
      "asar": false,
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "asar": false,
      "target": "AppImage"
    },
    "nsis": {
      "deleteAppDataOnUninstall": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "oneClick": false
    }
  }
}
